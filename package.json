    "Ben Siebert (mctzock)",
    "Jonas (freshvlay)"
  ],
  "license": "GPL-3.0-only",
  "bugs": {
    "url": "https://github.com/CraftionsMC/craft-style/issues"
  },
  "homepage": "https://github.com/CraftionsMC/craft-style#readme",
  "devDependencies": {
    "concurrently": "^6.3.0",
    "live-server": "^1.2.1",
    "sass": "^1.43.3"
  }
}
